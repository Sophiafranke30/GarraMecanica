//Definición de pines generales para joysticks, pines de cambio rutina automática, pin modo manual o automático y indicación del modo mediante LED
const int joystick[4]={A0,A1,A2,A3};
const int pinNext=A5;
const int pinPrev=A4;
const int pinModo=11;
const int ledManual=A6;
const int ledAuto=A7;

//Definición de la rutina automática
const int pasos =5;
int rutina[pasos][4]={
  {0,0,0,0}
  {45,90,135,90}
  {135,135,45,45}
  {180,90,90,0}
};
int pasoActual=0;

//Definición de funciones personalizadas
//Función para la leer los joysticks
void lecturaJoystick(){
for (int i=0;i<4;i++){
int vall=analogRead(Joystick[i]);
angulos[i]=map(vall,0,1023,0,180);
}
}

